<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="80dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/rounded_2dpwhite_20transwhite_rect">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <!-- Humidity -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wthr_now_humidity_container"
            android:layout_width="0dp"

            android:layout_height="50dp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/rounded_2dpwhite_20transwhite_rect">
            <ImageView
                android:id="@+id/wthr_now_icon_humidity"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center"
                android:src="@drawable/icon_humidity"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/wthr_now_icon_humidity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Tốc độ gió"
                android:textSize="16sp"
                android:fontFamily="sans-serif-black"
                android:textColor="#90000000"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/wthr_now_icon_humidity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="5"
                android:textSize="20sp"
                android:fontFamily="@font/robotomono_bold"
                android:textColor="#000"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Wind --
